<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_users_form_festymas_inherit" model="ir.ui.view">
        <field name="name">res.users.form.festymas.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="festymas" string="Festymas">
                    <group name="default_settings" string="Default Settings">
						<field name="ubication_longitude" />
						<field name="ubication_latitude" />
                        <field name="favorite_genre_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                    </group>
					<group name="favorites" string="Favorites">
                        <field name="favorite_participant_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
						<field name="favorite_concert_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
						<field name="favorite_festival_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                    </group>
					<group name="friends" string="Friends">
                        <field name="favorite_participant_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
						<field name="favorite_concert_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
						<field name="favorite_festival_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
